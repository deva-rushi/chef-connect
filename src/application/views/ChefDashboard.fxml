    <center>
        <VBox alignment="CENTER" spacing="20">
            <Button fx:id="addMenuItemButton" text="Add Menu Item" onAction="#handleAddMenuItem" />
            <Button fx:id="viewOrdersButton" text="View Orders" onAction="#handleViewOrders" />
            <Button fx:id="logoutButton" onAction="#handleLogout" text="Logout" />
        </VBox>
    </center>
</BorderPane>