<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controllers.CuisineChefSelectionController">
    <Label text="Select Cuisine and Chef" />
    <ComboBox fx:id="cuisineComboBox" promptText="Select Cuisine" />
    <ComboBox fx:id="sortComboBox" promptText="Sort By" />
    <ListView fx:id="chefListView" />
    <Button text="Select Chef" onAction="#handleSelectChef" />
    <Button text="Back" onAction="#handleBack" />
</VBox>