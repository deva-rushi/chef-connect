<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controllers.OrdersController">
    <ListView fx:id="ordersListView" />
    <Label fx:id="ratingLabel" visible="false" managed="false"/>
    <HBox alignment="CENTER" spacing="10">
        <ComboBox fx:id="statusComboBox" promptText="Update Status" visible="false" managed="false" />
        <Button fx:id="updateStatusButton" text="Update Status" onAction="#handleUpdateStatus" visible="false" managed="false"/>
    </HBox>
    <Button text="Back" onAction="#handleBack" />
</VBox>