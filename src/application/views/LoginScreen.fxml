<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controllers.LoginController">
    <center>
        <VBox alignment="CENTER" spacing="10">
            <TextField fx:id="usernameField" promptText="Username" />
            <PasswordField fx:id="passwordField" promptText="Password" />
            <ComboBox fx:id="roleComboBox" promptText="Select Role" />
            <Button fx:id="loginButton" onAction="#handleLogin" text="Login" />
            <Button fx:id="signupButton" onAction="#handleSignup" text="Sign Up" />
        </VBox>
    </center>
</BorderPane>
