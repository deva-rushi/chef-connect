<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20" xmlns="http://javafx.com/javafx/17.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controllers.SelectChefForOrderController">
    <padding>
        <Insets top="40.0" right="40.0" bottom="40.0" left="40.0" />
    </padding>
    <Label text="Select a Chef for Your Order" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #333; -fx-margin-bottom: 20px;" />
    <ComboBox fx:id="sortComboBox" promptText="Sort By" prefWidth="250.0" style="-fx-padding: 10px; -fx-border-color: #ccc; -fx-border-radius: 5px; -fx-background-color: #f8f8f8;" />
    <ListView fx:id="chefsListView" prefHeight="250.0" prefWidth="250.0" style="-fx-border-color: #ddd; -fx-border-radius: 5px; -fx-padding: 10px;" />
    <HBox spacing="15" alignment="CENTER" style="-fx-margin-top: 20px;">
        <Button mnemonicParsing="false" onAction="#handleSelectChef" text="Select Chef" prefWidth="120.0" style="-fx-padding: 10px 20px; -fx-background-color: #007bff; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand; -fx-font-size: 16px; -fx-border-radius: 5px; -fx-background-radius: 5px;" />
        <Button mnemonicParsing="false" onAction="#handleBack" text="Back" prefWidth="120.0" style="-fx-padding: 10px 20px; -fx-background-color: #f8f9fa; -fx-text-fill: #333; -fx-font-weight: bold; -fx-cursor: hand; -fx-border-color: #ddd; -fx-border-radius: 5px; -fx-background-radius: 5px;" />
    </HBox>
</VBox>